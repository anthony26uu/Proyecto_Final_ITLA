@model IEnumerable<ProyectFinal_Anthony_Santana.Models.Peliculas>

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <h2>LISTADO DE PELICULAS</h2>

    <form action="~/Reportes/Ventas/ReportPeliculas.aspx">
        <input class="btn-danger" type="submit" value="Imprimir" />
    </form>

    </div>
    <p>
        @Html.ActionLink("NUEVA", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Existencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Existencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duracion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.ActionLink("EDITAR", "Edit", new { id = item.PeliculaId }) |
                    @Html.ActionLink("DETALLES", "Details", new { id = item.PeliculaId }) |
                    @Html.ActionLink("ELIMINAR", "Delete", new { id = item.PeliculaId })
                </td>
            </tr>
        }
    </table>
